<%- include('../partials/header.ejs') %>

<link rel ="stylesheet" href ="/css/bootstrap.min.css">
<script src ="/js/jquery.js"></script>
<div class ="container">
    <div class ="row text-center">
        <div class ="col-4"></div>
        <div class ="col-4">
             <%if(message.success){%>
                <div class="alert alert-success" id ="msg"role="alert">
                <%=message.success%>
                </div>
                <%}%>
                <%if(message.error){%>
                    <div class="alert alert-danger" id ="msg"role="alert">
                    <%=message.error%>
                    </div>
                    <%}%>
            <h1>Student Login</h1><br>
            <div class ="ad-login">
                <form action ="/Student/students/login" method ="POST">
                <div class ="form-group"><input class ="form-control" type ="text" name ="username" placeholder ="Registration No." required></div>
                <div class ="form-group"><input class ="form-control" type ="password" name ="password" placeholder ="Password" required></div>
                <div class ="form-group"><input class ="form-control btn btn-outline-primary" type ="submit" name ="submit"></div>
                </form>
                <p><a href ="register">Don't Have an Accout?&nbsp;Create New</a></p>
            </div>
        </div>
    </div>
</div>
<script>
    $('#msg').fadeOut(2000);
    </script>
<%- include('../partials/footer.ejs') %>