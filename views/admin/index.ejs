<%var i=0;%>
<!doctype html>
<html>
<head>
<meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
<title>Home</title>
<link rel ="stylesheet" href ="../css/bootstrap.min.css">
<link rel ="stylesheet" href ="../css/fontawesome.min.css">
<link rel ="stylesheet" href ="../css/animate.css">
<link rel ="stylesheet" href ="../css/style.css">
<style>
    table{
        width:100%;
        padding:5px;
    }
    th,td{
        padding:5px;
        border:1px solid black;
    }
    th{
        background-color:#f5f8fd;
        color:#000;
    }
    .jumbotron{
        padding:10px;
        min-height:250px;
    }
</style>
</head>
<body>
<div class ="container-fluid">
    <div class= "row text-center">
        <div class ="col-md-3 col-xs-12"><br>
            <img src ="../images\Logo_Pinwheel.png" class ="img-responsive" height ="150">
        </div>
        <div class ="col-md-6 col-xs-12"><br>
            <h1>Library Management System</h1>
            <h3>(NIT Jamshedpur)</h3>
        </div>
        <div class ="col-md-3 col-xs-12">
            <img src ="../images\images.jpg" class ="img-responsive"height ="200">
        </div>
    </div>
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"><i class ="fa fa-user"></i>Signed As Amit</a>
  </nav>
  <div class ="container-fluid">
    <div class ="row">
        <div class ="col-md-3 col-xs-12">
            <div class ="list-group">
                <div class ="list-group-item active"><a href ="#" style ="color:white">List Of Books</a></div>
                <div class ="list-group-item"><a href ="admin/bookentry">Add New Book</a></div>
                <div class ="list-group-item"><a href ="#">Update Book Record</a></div>
                <div class ="list-group-item"><a href ="#">Issue a Book</a></div>
                <div class ="list-group-item"><a href ="#">Student Details</a></div>
            </div><br>
            <div class ="bk_notification jumbotron">
                <h4 class ="text-center"><u>Notice</u></h4>
                <ul>
                <marquee speed="5" direction="up">
                    <li>New books for GATE  will be arriving very soon</li>
                    <li>More E-books will be added soon</li>
                </marquee>
                </ul>
            </div>
        </div>
        <div class ="col-md-9 col-xs-12">
            <div class ="row text-center">
                <div class= "col-12">
                    <h2>Available Books</h2>
                </div>
            </div>
            <div class ="row text-center">
                <div class= "col-12">
                    <table>
                        <tr>
                            <th>Sr No.</th>
                            <th>Book_Id</th>
                            <th>Book_Name</th>
                            <th>Book_author</th>
                            <th>Book_Publication</th>
                            <th>Book_Edition</th>
                            <th>Course</th>
                            <th>Department</th>
                            <th>Quantity</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                        <%books.forEach((data)=>{%>
                            <%i++;%>
                            <tr>
                                <td><%=i%></td>
                                <td><%=data.book_id%></td>
                                <td><%=data.book_name%></td>
                                <td><%=data.book_author%></td>
                                <td><%=data.book_publication%></td>
                                <td><%=data.book_edition%></td>
                                <td><%=data.book_course%></td>
                                <td><%=data.book_department%></td>
                                <td><%=data.book_qty%></td>
                                <td>
                                    <form action ="/admin/<%=data.book_id%>" method ="POST">
                                        <button type ="submit" value="<%=data.book_id%>"name="submit" class ="btn btn-outline-warning">Update</button>
                                    </form>
                                </td>
                                <td>
                                    <form action ="/admin/<%=data.book_id%>" method ="POST">
                                        <button type ="submit" value="<%=data.book_id%>"name="submit" class ="btn btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <%})%>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../partials/footer.ejs') %>